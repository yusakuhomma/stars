<h1>所持スキル</h1>

<%= form_for(@set_haveskill) do |f| %>

<div class="form-group">
            <%= f.label :assessment, '評価' %>
            <%= f.text_field :assessment, class: 'form-control' %>
          </div>
          
          <div class="form-group">
          <%= f.label :user_id, 'ユーザー',class:'' %><br>
          <%= f.collection_select :user_id, User.all, :id, :name, {}, {class: 'form-control'} %>
        </div>

<div class="form-group">
          <%= f.label :skill_id, 'スキル',class:'' %><br>
          <%= f.collection_select :skill_id, Skill.all, :id, :name, {}, {class: 'form-control'} %>
        </div>

          <div class="">
            <%= f.submit '登録する', class: 'btn btn-primary' %>
          </div>
<% end %>          
 <%= link_to '戻る',master_path, class:"btn btn-default" %>
 
 
 
 <table class="table">
  <tr>
    <th>id</th>
    <th>assessment</th>
    <th>user</th>
    <th>skill</th>
  </tr>
  <% @haveskills.each do |haveskill| %>
  <tr>
    <td><%= haveskill.id %></td>
    <td><%= haveskill.assessment %></td>
    <td><%= haveskill.user_id %>(<%= haveskill.user.name %>)</td>
    <td><%= haveskill.skill_id %>(<%= haveskill.skill.name %>)</td>

  </tr>
  <% end %>
</table>
