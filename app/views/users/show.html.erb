




<h1 class="text-center"><%= @user.name %></h1>
<div class="col-xs-offset-2 col-xs-8">

          <table class="table text-center">
            <tbody>
              <tr>
                <td class="">所属</td>
                <td class=""><%= @user.department.name %></td>
              </tr>
              
              <tr>
                <td class="">メールアドレス</td>
                <td class=""><%= @user.email %></td>
              </tr>
              
              <tr>
                <td class="">内線番号</td>
                <td class=""><%= @user.extension_number %></td>
              </tr>
            </tbody>
          </table>
     </div>



<div class="panel-group col-xs-offset-2 col-xs-8">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h4 class="panel-title text-center">
      <%= @user.name %>の評価一覧
      </h4>
    </div>
    <div class="panel-body">
    
     

<h1 class="text-center">☆：<%= @user.haveskills.where(assessment:1).count %></h1>

       <div>
       
        <table class="table table-bordered text-center">
            <tbody>
              <% @user.haveskills.where(assessment:1).each do |have| %>
              <tr>
                <td class="col-xs-2">
                <%= have.skill.category.name %>
                </td>
                <td class="col-xs-4">
                <%= link_to have.skill.name, skill_path(have.skill_id) %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <br><br>
          </div>
          
          <h2 class="text-center">◯：<%= @user.haveskills.where(assessment:2).count %></h2>

        <div>
          
        <table class="table table-bordered col-xs-10 text-center">
            <tbody>
               <% @user.haveskills.where(assessment:2).each do |have| %>
              <tr>
                <td class="col-xs-2">
               <%= have.skill.category.name %>
                </td>
                <td class="col-xs-4">
                <%= link_to have.skill.name, skill_path(have.skill_id) %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <br><br>  <br><br>  <br><br>  <br><br>  
        </div>
  

<% if current_user == @user %>


        
        <h2 class="text-center">△：<%= @user.haveskills.where(assessment:3).count %></h2>

        <div>
          
        <table class="table table-bordered col-xs-10 text-center">
            <tbody>
               <% @user.haveskills.where(assessment:3).each do |have| %>
              <tr>
                <td class="col-xs-2">
               <%= have.skill.category.name %>
                </td>
                <td class="col-xs-4">
                <%= link_to have.skill.name, skill_path(have.skill_id) %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
            <br><br>  <br><br>
        </div>
        
        
        <h2 class="text-center"> ×：<%= @user.haveskills.where(assessment:4).count %></h2>

        <div>
          
        <table class="table table-bordered col-xs-10 text-center">
            <tbody>
               <% @user.haveskills.where(assessment:4).each do |have| %>
              <tr>
                <td class="col-xs-2">
               <%= have.skill.category.name %>
                </td>
                <td class="col-xs-4">
                <%= link_to have.skill.name, skill_path(have.skill_id) %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <br><br>
        </div>
        
<% else %>
<p class = "text-center">※△と×の評価は自身しか確認できません</p>
<% end %>
    </div>
</div>
</div>