<h1>所属</h1>
<table class="table">
  <tr>
    <th>id</th>
    <th>name</th>
    <th>display</th>
  </tr>
  <% @departments.each do |department| %>
  <tr>
    <td><%= department.id %></td>
    <td><%= department.name %></td>
    <td><%= department.display %></td>
  </tr>
  <% end %>
</table>

<%= form_for(@set_department) do |f| %>

<div class="form-group">
            <%= f.label :name, '所属名' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :display, '表示順' %>
            <%= f.text_field :display, class: 'form-control' %>
          </div>

          <div class="">
            <%= f.submit '登録する', class: 'btn btn-primary' %>
          </div>
<% end %>          
 <%= link_to '戻る',master_path, class:"btn btn-default" %>