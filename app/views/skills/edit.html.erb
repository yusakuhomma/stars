<%= form_for(@skill) do |f| %>

          <div class="form-group">
            <%= f.label :name, 'スキル名' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>



          <div class="form-group">
            <%= f.label :category_id, 'カテゴリー' %>
            <br>
            <%= f.collection_select :category_id, Category.all, :id, :name, {}, {class: 'form-control'} %>
          </div>
          
          <div class="form-group">
            <%= f.label :user_id, '投稿者' %>
            <br>
            <%= f.collection_select :user_id, User.all, :id, :name, {}, {class: 'form-control'} %>
          </div>

          
          
          <div class="form-group">
            <%= f.label :display, '表示順' %>
            <%= f.text_field :display, class: 'form-control' %>
          </div>
          
          <div class="text-right">
            <%= f.submit '登録する', class: 'btn btn-primary' %>
          </div>
<% end %>

<%= link_to "削除", @skill, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger' %>
<%= link_to '戻る',master_path, class:"btn btn-default" %>